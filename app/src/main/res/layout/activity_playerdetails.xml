<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerdetailsActivity">


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="321dp"
        android:layout_marginBottom="638dp"
        android:background="@drawable/round_corner"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="509dp"
        android:text="    Enter Player "
        android:textColor="#D41717"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="462dp"
        android:text="    Details "
        android:textColor="#D41717"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="321dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/roundedcornersinedittext"
        android:hint="    Enter Player name"
        android:textStyle="bold"
        android:scaleType="centerCrop"
        android:shadowRadius="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="245dp"
        android:background="@drawable/roundedcornersinedittext"
        android:backgroundTint="#683B1E"
        android:textStyle="bold"
        android:text="Submit" />


</RelativeLayout>