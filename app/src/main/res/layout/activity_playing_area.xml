<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/plating_reae_reltive_layout"
    android:layout_height="match_parent"
    tools:context=".PlayingAreaActivity">


    <ImageView
        android:id="@+id/back_imagebtn"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="636dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/quit_button"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="641dp"
        android:fontFamily="sans-serif-black"
        android:text="Quit"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottombar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="150dp"
        android:padding="6dp">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="399dp"
            android:layout_height="460dp"
            android:soundEffectsEnabled="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/top_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_keyboard_arrow_up_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/left_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_chevron_left_24" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/right_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_chevron_right_24" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/down_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/score_update_textView"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="167dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="636dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="25sp" />


</RelativeLayout>